{
    "manifest_version": 2,
    "name": "Firecast",
    "version": "1.0",
    "description": "Add videos to Firecast playlists",
    "applications": {
        "gecko": {
            "id": "firecast@yggdrion.dev"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Firecast"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}
